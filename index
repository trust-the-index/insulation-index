<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script>
    // Initial State: Zoomed out to show the whole USA
    const map = L.map('map').setView([39.8283, -98.5795], 4);
    L.tileLayer('https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png').addTo(map);

    const hotspots = [
        { name: "Jackson Heights, NY", coords: [40.7557, -73.8831], score: 99, desc: "Extreme levels of seasoning. Acoustic vitality off the charts." },
        { name: "Sterling Woods, VA", coords: [39.0067, -77.4291], score: 8, desc: "Critical Level Blandness. Beige siding detected in 100% of structures." },
        { name: "Mission District, CA", coords: [37.7599, -122.4148], score: 94, desc: "High-frequency zone. High density of murals and community interaction." }
    ];

    hotspots.forEach(place => {
        let color = place.score > 80 ? '#ff3e00' : '#cccccc';
        L.circle(place.coords, { color, fillColor: color, fillOpacity: 0.6, radius: 40000 }).addTo(map)
         .on('click', () => updatePanel(place));
    });

    function updatePanel(data) {
        document.getElementById('vibe-score').innerText = data.score;
        document.getElementById('vibe-loc').innerText = data.name;
        document.getElementById('vibe-desc').innerText = data.desc;
        document.getElementById('status-tag').innerText = data.score > 50 ? "Electric Zone" : "Blandness Alert";
        map.flyTo(data.coords, 12);
    }

    function searchAddress() {
        const addr = document.getElementById('addr-input').value;
        if(!addr) return;
        
        // Mocking the 'Scan' result for humor
        const mockScore = Math.floor(Math.random() * 100);
        const results = {
            name: addr.split(',')[0],
            coords: [39.8, -98.5], // Stays centered for mock
            score: mockScore,
            desc: mockScore < 30 ? "Warning: High risk of unseasoned potato salad. Immediate social intervention required." : "Healthy pulse detected. Carry on with the noise."
        };
        updatePanel(results);
    }
</script>

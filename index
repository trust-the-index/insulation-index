<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script>
    // CENTERED ON USA (Coordinates 39.8, -98.5) with Zoom Level 4
    const map = L.map('map').setView([39.8283, -98.5795], 4);

    L.tileLayer('https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png', {
        attribution: '&copy; OpenStreetMap'
    }).addTo(map);

    // Initial US Hotspots
    const hotspots = [
        { name: "Jackson Heights, NY", coords: [40.7557, -73.8831], score: 99, desc: "Global epicenter of spice. Acoustic vitality off the charts." },
        { name: "Sterling Woods, VA", coords: [39.0067, -77.4291], score: 8, desc: "Critical Level Blandness. Beige siding detected in 100% of structures." },
        { name: "Mission District, CA", coords: [37.7599, -122.4148], score: 94, desc: "High-frequency zone. High density of murals and community interaction." },
        { name: "Naples, FL", coords: [26.1420, -81.7948], score: 14, desc: "Warning: High gated-community friction. Minimum garlic levels detected." },
        { name: "Pilsen, Chicago", coords: [41.8540, -87.6663], score: 91, desc: "Resonant Zone. Strong cultural pulse with high auditory output." }
    ];

    hotspots.forEach(place => {
        let color = place.score > 80 ? '#ff3e00' : (place.score > 50 ? '#ffae00' : '#cccccc');
        const circle = L.circle(place.coords, { color, fillColor: color, fillOpacity: 0.6, radius: 25000 }).addTo(map);
        circle.on('click', () => {
            document.getElementById('vibe-score').innerText = place.score;
            document.getElementById('vibe-desc').innerHTML = `<strong>${place.name}:</strong> ${place.desc}`;
            document.querySelector('.status-tag').innerText = place.score > 80 ? "Electric Zone" : "Blandness Alert";
        });
    });
</script>

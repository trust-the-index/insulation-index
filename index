<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
    // Set map to show the whole USA
    const map = L.map('map').setView([39.8283, -98.5795], 4);
    L.tileLayer('https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png', {
        attribution: '&copy; OpenStreetMap'
    }).addTo(map);

    // Initial Hotspots
    const hotspots = [
        { name: "Jackson Heights, NY", coords: [40.7557, -73.8831], score: 99, desc: "Global epicenter of spice. Acoustic vitality off the charts." },
        { name: "Sterling Woods, VA", coords: [39.0067, -77.4291], score: 8, desc: "Critical Level Blandness. Beige siding detected in 100% of structures." },
        { name: "Mission District, CA", coords: [37.7599, -122.4148], score: 94, desc: "High-frequency zone. High density of murals and community interaction." }
    ];

    hotspots.forEach(place => {
        let color = place.score > 80 ? '#ff3e00' : '#cccccc';
        L.circle(place.coords, { color, fillColor: color, fillOpacity: 0.6, radius: 30000 }).addTo(map)
         .on('click', () => updatePanel(place, true));
    });

    function updatePanel(data, zoom = true) {
        document.getElementById('vibe-score').innerText = data.score;
        document.getElementById('vibe-loc').innerText = data.name;
        document.getElementById('vibe-desc').innerText = data.desc;
        document.getElementById('status-tag').innerText = data.score > 50 ? "Electric Zone" : "Blandness Alert";
        if(zoom) map.flyTo(data.coords, 14);
    }

    // 3. Real Search Logic (Connecting to Nominatim)
    async function searchAddress() {
        const query = document.getElementById('addr-input').value;
        if (!query) return;

        try {
            const response = await fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(query)}`);
            const results = await response.json();

            if (results.length > 0) {
                const topResult = results[0];
                const lat = parseFloat(topResult.lat);
                const lon = parseFloat(topResult.lon);

                // Generate a "Funny" score based on the location
                const randomScore = Math.floor(Math.random() * 100);
                
                const searchData = {
                    name: topResult.display_name.split(',')[0],
                    coords: [lat, lon],
                    score: randomScore,
                    desc: randomScore < 30 ? "Analysis: Sub-optimal energy levels. High risk of HOA gatekeeping." : "Analysis: High cultural frequency detected. Safe for loud music."
                };

                updatePanel(searchData);
            } else {
                alert("Location not found in our Vibe Database.");
            }
        } catch (error) {
            console.error("Search failed:", error);
        }
    }
</script>
